
{
    "manifest_version": 2,
    "name": "Todo List Extension",
    "version": "1.0",
    "description": "A simple todo list extension with time tracking",
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/16.png",
        "48": "images/68.png",
        "128": "images/128.png"
      }
    },
    "permissions": [
      "storage"
    ],
    "icons": {
      "16": "images/16.png",
      "48": "images/68.png",
      "128": "images/128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }